<h1 class="fs-4">{{product.name}}</h1>

<div class="row g-3">
    <div class="col-md-4">
        <img width="400" src="{{product.image}}" class="img-thumbnail" alt=".{{product.name}}">
    </div>
    <div class="col-md-8">
        <p>R${{product.price}}</p>
        <p>{{product.description}}</p>
        <p><a href="/products" class="ref">Voltar</a></p>
    </div>
</div>

