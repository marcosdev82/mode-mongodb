<h1 class="fs-4">Produtos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Imagem</th>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td><img src="{{this.image}}" alt="{{this.name}}" width="60"></td>
      <td>{{this.name}}</td>
      <td>R${{this.price}}</td>
      <td>
        <div class="d-flex gap-2">
          <a href="/products/{{this._id}}" class="btn btn-primary btn-sm">Detalhes</a> 
          <form action="/products/remove/{{this._id}}" method="POST">
            <input type="submit" value="Excluir" class="btn btn-danger btn-sm">
          </form>  
          <form action="/products/edit/{{this._id}}" method="GET">
            <input type="submit" value="Editar" class="btn btn-warning btn-sm">
          </form>  
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>